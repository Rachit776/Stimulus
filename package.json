{
  "name": "Stimulus",
  "version": "1.0.0",
  "description": "A minimal marks entering application",
  "author": "",
  "main": "main.js",
  "private": true,
  "xo": {
    "esnext": true,
    "space": 4,
    "max-depth": 6,
    "globals": [
      "path",
      "window",
      "document",
      "sessionStorage",
      "XLS"
    ]
  },
  "scripts": {
    "start": "electron main.js",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.stimulus.app",
    "productName": "Stimulus",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "favicon.ico"

    }
  },
  "keywords": [
    "marks",
    "teacher",
    "students"
  ],
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^36.2.1",
    "electron-builder": "^26.0.12",
    "xo": "^0.12.0"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  }
}
